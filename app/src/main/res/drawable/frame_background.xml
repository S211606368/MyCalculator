<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 填充的颜色 -->
    <solid android:color="#FFFFFF" />
    <!-- android:radius 弧形的半径 -->
    <!-- 设置按钮的四个角为弧形 -->
    <!--<corners
        android:radius="250dip" />-->
    <!--也可单独设置-->
    <corners
    android:topLeftRadius="@dimen/x40"
    android:topRightRadius="@dimen/x40"
    android:bottomRightRadius="@dimen/x40"
    android:bottomLeftRadius="@dimen/x40"
    />
    <!--设置文字padding-->
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/x20"
        android:top="@dimen/x20"
        android:right="@dimen/x20"
        android:bottom="@dimen/x20" />


    <stroke android:width="@dimen/x5"
        android:color="#AA999999"/>

</shape>