<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetPasswordActivity"
    android:background="#DD000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/y20"
        android:layout_marginTop="@dimen/y200"
        android:layout_marginEnd="@dimen/y20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="2"
                android:text="@string/user"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="no"
                android:background="#AAAAAAAA"
                android:digits="@string/inputType_digits"
                android:ems="16"
                android:hint="@string/userInput"
                android:inputType="textVisiblePassword"
                android:maxLength="16"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="2"
                android:text="@string/password"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="no"
                android:background="#AAAAAAAA"
                android:digits="@string/inputType_digits"
                android:ems="16"
                android:hint="@string/RePassword"
                android:inputType="textPassword"
                android:maxLength="16"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">
            <TextView
                android:id="@+id/rePasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="4"
                android:text="@string/rePassword"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/rePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="no"
                android:background="#AAAAAAAA"
                android:digits="@string/inputType_digits"
                android:ems="16"
                android:hint="@string/RePassword"
                android:inputType="textPassword"
                android:maxLength="16"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y150">

            <Button
                android:id="@+id/reLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginEnd="@dimen/x40"
                android:background="@drawable/login_background"
                android:text="@string/reLogin"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                style="@style/AppTheme"/>

            <Button
                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginEnd="@dimen/x40"
                android:background="@drawable/login_background"
                android:text="@string/changePassword"
                android:textSize="@dimen/x50"
                android:textColor="#FFFFFF"
                style="@style/AppTheme"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>