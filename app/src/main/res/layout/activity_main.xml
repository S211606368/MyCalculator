<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    tools:context=".activity.MainActivity"
    android:configChanges="orientation|screenSize|keyboardHidden"
    android:launchMode="singleTask"
    android:windowSoftInputMode="stateHidden|adjustResize">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginBottom="@dimen/y20"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/function_background"
                android:text="@string/clear"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_sign"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/function_background"
                android:text="@string/sign"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/function_background"
                android:text="@string/del"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_division"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:background="@drawable/symbol_background"
                android:text="@string/division"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <TextView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <Button
                android:id="@+id/button_7"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/seven"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/eight"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/nine"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_ride"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:background="@drawable/symbol_background"
                android:text="@string/ride"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>


            <TextView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <Button
                android:id="@+id/button_4"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/four"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/five"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/six"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>


            <Button
                android:id="@+id/button_sub"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:background="@drawable/symbol_background"
                android:text="@string/subtract"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <TextView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <Button
                android:id="@+id/button_1"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/one"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/two"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/three"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>


            <Button
                android:id="@+id/button_add"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:background="@drawable/symbol_background"
                android:text="@string/add"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <TextView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <Button
                android:id="@+id/button_per"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/percent"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/zero"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_point"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:layout_marginEnd="@dimen/y20"
                android:background="@drawable/number_backguound"
                android:text="@string/point"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <Button
                android:id="@+id/button_equal"
                android:layout_width="@dimen/x175"
                android:layout_height="@dimen/x175"
                android:background="@drawable/symbol_background"
                android:text="@string/equal"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/x75"/>

            <TextView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/sign_out"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/go_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginEnd="@dimen/x20"
        android:background="@drawable/symbol_background"
        android:text="@string/changePassword"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_marginTop="@dimen/x130"
        android:gravity="center_vertical|end"
        android:text=""
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/x50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="center_vertical|end"
        android:text=""
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/x90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cal" />

</androidx.constraintlayout.widget.ConstraintLayout>